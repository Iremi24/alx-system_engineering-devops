#!/usr/bin/env bash
# This script displays different messages based on the loop iteration

# Initialize a counter
counter=1

# Use a while loop to iterate from 1 to 10
while [ $counter -le 10 ]; do
    # Check if the counter is 4
    if [ $counter -eq 4 ]; then
        echo "bad luck"
    # Check if the counter is 8
    elif [ $counter -eq 8 ]; then
        echo "good luck"
    # For other iterations
    else
        echo "Best School"
    fi
    
    # Increment the counter
    ((counter++))
done
