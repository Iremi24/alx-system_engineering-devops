#!/usr/bin/env bash
# This script audits subdomains for a given domain

# Function to get information about a subdomain
get_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local output

    output=$(dig +short ${subdomain}.${domain})
    if [[ -n $output ]]; then
        echo "The subdomain ${subdomain} is an A record and points to ${output}"
    else
        echo "The subdomain ${subdomain} does not exist or has no A record"
    fi
}

# Main logic
domain=$1
subdomain=$2

if [[ -z $domain ]]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

if [[ -n $subdomain ]]; then
    get_subdomain_info $domain $subdomain
else
    get_subdomain_info $domain "www"
    get_subdomain_info $domain "lb-01"
    get_subdomain_info $domain "web-01"
    get_subdomain_info $domain "web-02"
fi
